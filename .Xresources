URxvt.perl-ext-common: default,tabbedalt,matcher,resize-font,selection-to-clipboard,keyboard-select

URxvt.font: xft:Terminus:size=13

! keyboard-select
URxvt.keysym.M-Escape: keyboard-select:activete

! scrolling settings
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt.scrollBar: false
URxvt.keysym.S-Up: command:\033]720;1\007
URxvt.keysym.S-Down: command:\033]721;1\007

! copying settings
URxvt.clipboard.autocopy: true
URxvt.keysym.C-S-c: clipboard:copy
URxvt.keysym.C-S-v: clipboard:paste

! tabbedex settings
!URxvt.tabbedex.new-button: false
!URxvt.tabbedex.title: true
!URxvt.tabbedex.autohide: false

! tabbedalt settings
URxvt.tabbedalt.new-button: false
URxvt.tabbedalt.stop-flickering: true
URxvt.tabbedalt.disable-default-keys: true
URxvt.tabbedalt.tab-numbers: false

URxvt.keysym.C-t: tabbedalt:new_tab
URxvt.keysym.C-M-Delete: tabbedalt:new_tab:btop:btop
URxvt.keysym.C-M-c: tabbedalt:new_tab:calc:R -q
!URxvt.keysym.C-h: tabbedalt:prev_tab
!URxvt.keysym.C-l: tabbedalt:next_tab

URxvt.keysym.Control-1: tabbedalt:jump_to_tab:1
URxvt.keysym.Control-2: tabbedalt:jump_to_tab:2
URxvt.keysym.Control-3: tabbedalt:jump_to_tab:3
URxvt.keysym.Control-4: tabbedalt:jump_to_tab:4
URxvt.keysym.Control-5: tabbedalt:jump_to_tab:5
URxvt.keysym.Control-6: tabbedalt:jump_to_tab:6
URxvt.keysym.Control-7: tabbedalt:jump_to_tab:7
URxvt.keysym.Control-8: tabbedalt:jump_to_tab:8
URxvt.keysym.Control-9: tabbedalt:jump_to_tab:9
URxvt.keysym.Control-0: tabbedalt:jump_to_tab:0

URxvt.keysym.Control-r: tabbedalt:rename_tab

! fix the bug where first line is in the middle of the screen
URxvt.geometry: 400x400

URxvt.refreshRate: 60

! matcher settings for opening urls
URxvt.url-launcher: firefox
URxvt.matcher.button: C-1
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

URxvt.loginShell: true
URxvt.shell: /usr/bin/zsh

! special
*.foreground:   #a7a7a7
*.background:   #1e1e1e
*.cursorColor:  #a7a7a7

! black
*.color0:       #1e1e1e
*.color8:       #5f5a60

! red
*.color1:       #cf6a4c
*.color9:       #cf6a4c

! green
*.color2:       #8f9d6a
*.color10:      #8f9d6a

! yellow
*.color3:       #f9ee98
*.color11:      #f9ee98

! blue
*.color4:       #7587a6
*.color12:      #7587a6

! magenta
*.color5:       #9b859d
*.color13:      #9b859d

! cyan
